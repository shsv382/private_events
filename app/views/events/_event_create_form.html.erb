<%= form_for @event do |f| %>
	<%= f.label :name, "Имя события" %>
	<%= f.text_field :name %>	
	<%= f.label :location, "Место проведения события" %>
	<%= f.text_field :location %>
	<%= f.label :date, "Дата события" %>
	<%= datetime_select :event, :date, use_month_numbers: true,
										start_year: Time.now.year,
										end_year: Time.now.year + 20 %>
	<%= f.submit "Создать событие!" %>
<% end %>