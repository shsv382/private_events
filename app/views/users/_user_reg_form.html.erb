<%= form_for @user do |f| %>
	<%= f.label :name, "Ваше имя" %>
	<%= f.text_field :name %>
	<%= f.label :email, "Ваш e-mail" %>
	<%= f.text_field :email %>
	<%= f.label :password, "Придумайте пароль" %>
	<%= f.password_field :password %>	
	<%= f.label :password, "Повторите пароль" %>
	<%= f.password_field :password_confirmation %> 
	<%= f.submit "Зарегистрироваться!" %>
<% end %>